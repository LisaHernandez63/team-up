<body class="player-bg">
<div class="text-center white-text">
<h1><%= @team.teamname %></h1>
</div>
<div class="row text-center bold">
<ul class="no-bullets bold white-text">
  <li><img src= '<%= image_url @team.profile_photo %>' width='600px'/></li>
  <li>Coach: <%= @team.coach %></li>
  <% unless @team.description.nil? %>
    <li><%= @team.description %></li>
  <% end %>
  <li>School: <%= @team.schoolname %></li>
  <li>Address: <%= @team.streetaddress%></li>
  <li><%= @team.town %>, <%= @team.state %><%= @team.zip %></li>
</ul>
</div>

<div class="row text-center">
<h2>Players</h2>
<div id="add-background-light">
<ul class="no-bullets">
<div class="large-6 small-12 column">
<li><h3>NAME</h3>
</div>
<div class="large-6 small-12 column">
<li><h3>POSITION</li></h3>
</div>
<% if @players.empty? %>
  <h3>We don't have any players on this team yet!</h3>
<% else %>
  <% @players.each do |player| %>
      <div id="add-background-light">
      <ul class="no-bullets">
      <div class="large-6 small-12 column">
      <li><h3><%= link_to "#{player.first_name} #{player.last_name}", player_path(player.id)%></h3>
      </div>
      <div class="large-6 small-12 column">
      <li><h3><%= player.position %></li></h3>
      </div>
      </ul>
  <% end %>
<% end %>
</br>
<%= link_to 'Add Players', new_team_player_path(@team), class:"button" %>
</br>
<%= link_to 'Back', teams_path, class: "button" %>
</div>
</body>
